{
  "name": "Samepage - Presentation",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Samepage - Presentation",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "tabs",
    "https://samepage.io/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_title": "Samepage - Presentation",
    "default_icon": "icon48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://samepage.io/*"
      ],
      "js": ["jquery.js", "presentation.js"]
    }
  ]
}
